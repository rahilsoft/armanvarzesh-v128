{
  "name": "@arman/coach-app",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --watch src --exec ts-node src/main.ts",
    "lint": "pnpm -w exec eslint . --ext .ts,.tsx",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit || echo 'no tsconfig'",
    "format:check": "prettier -c . || echo \"no prettier\"",
    "clean": "rimraf dist || true",
    "format": "prettier --write .",
    "test:e2e": "echo \"e2e placeholder\"",
    "prepare": "husky install || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "start:prod": "node dist/main.js",
    "codegen": "graphql-codegen",
    "coverage": "jest --coverage --passWithNoTests",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --json --output-file sbom.json",
    "e2e:ios:build": "detox build -c ios.sim.release",
    "e2e:ios:test": "detox test -c ios.sim.release --cleanup",
    "e2e:android:build": "detox build -c android.emu.release",
    "e2e:android:test": "detox test -c android.emu.release --cleanup"
  },
  "dependencies": {
    "expo": "^49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.0",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@apollo/client": "^4.0.7",
    "graphql": "^16.8.1",
    "expo-font": "~11.10.3",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/apollo": "^13.1.0",
    "expo-image-picker": "~15.0.7",
    "expo-file-system": "~17.0.1",
    "expo-av": "~14.0.5",
    "expo-secure-store": "~13.5.1",
    "react-native-webview": "^13.8.6",
    "expo-document-picker": "~15.0.0",
    "@arman/http-client": "workspace:*",
    "@arman/state": "workspace:*",
    "zustand": "^4.5.2",
    "@arman/async-utils": "workspace:*",
    "@arman/ui": "workspace:*",
    "@arman/utils": "workspace:*",
    "expo-image": "~1.13.0"
  },
  "devDependencies": {
    "@types/react": "~18.0.0",
    "@types/react-native": "~0.72.0",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.2",
    "@nestjs/cli": "^11.0.0",
    "ts-jest": "^29.1.5",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "detox": "^20.18.3",
    "@types/jest": "^29.5.14"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9 <10"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}