{
  "name": "@arman/armanfit-admin",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.tsx",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node src/main.ts",
    "test": "jest --passWithNoTests || vitest run || echo \"no tests\"",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "lint": "pnpm -w exec eslint . --ext .ts,.tsx || echo \"no eslint\"",
    "test:cov": "jest --coverage",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "format:check": "prettier -c . || echo \"no prettier\"",
    "clean": "rimraf dist || true",
    "format": "prettier --write .",
    "test:e2e": "echo \"e2e placeholder\"",
    "prepare": "husky install || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "start:prod": "node dist/main.js",
    "coverage": "jest --coverage --passWithNoTests",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --json --output-file sbom.json"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "@apollo/client": "^3.8.0",
    "graphql": "^16.8.1",
    "antd": "^5.12.0",
    "dayjs": "^1.11.9",
    "@arman/ui-tokens": "workspace:*",
    "react-hook-form": "^7.52.1",
    "zod": "^3.23.8",
    "@arman/ui-components": "workspace:*",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/apollo": "^12.0.0",
    "@apollo/server": "^4.11.0",
    "@arman/observability-sdk": "workspace:*",
    "@arman/security-middleware": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.14",
    "@types/react-router-dom": "^5.3.3",
    "vite": "^5.2.0",
    "@hookform/resolvers": "^3.3.4",
    "@storybook/react-vite": "^8.1.0",
    "storybook": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "ts-node": "^10.9.2",
    "@nestjs/cli": "^11.0.0",
    "ts-jest": "^29.1.5",
    "vite-plugin-pwa": "^0.20.0",
    "@types/node": "^20.11.25",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/recommended"
    ]
  },
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9 <10"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
