{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "url": [
        "http://localhost:3000/"
      ],
      "startServerCommand": "pnpm start",
      "startServerReadyPattern": "started server on"
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouse"
    }
  }
}
