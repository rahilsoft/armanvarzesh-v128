    "jose": "^5.9.3",
    "web-vitals": "^4.2.0",
    "three": "^9.0.0",
    "@react-three/fiber": "^9.100.0",
    "@react-three/drei": "^9.100.0",
    "@arman/http-client": "workspace:*",
    "@arman/state": "workspace:*",
    "zustand": "^4.5.2",
    "@arman/async-utils": "workspace:*",
    "@arman/ui": "workspace:*",
    "@arman/utils": "workspace:*"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.3.4",
