    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.0.0",
    "@axe-core/playwright": "^4.9.1",
    "@lhci/cli": "^0.13.0"
