{
  "name": "@arman/service-kit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run",
    "clean": "rimraf dist || true",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write .",
    "test:e2e": "echo \"e2e placeholder\"",
    "dev": "nodemon --exec ts-node src/main.ts || echo \"dev script placeholder\"",
    "start": "node dist/main.js",
    "prepare": "husky install || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "start:prod": "node dist/main.js",
    "coverage": "jest --coverage --passWithNoTests",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --json --output-file sbom.json"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "pino": "^9.3.2",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8",
    "express-rate-limit": "^7.4.0",
    "@arman/observability-sdk": "workspace:*",
    "@arman/security-middleware": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/express": "^4.17.21",
    "vitest": "^3.2.4",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9 <10"
  }
}
