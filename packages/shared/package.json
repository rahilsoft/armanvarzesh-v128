{
  "name": "@arman/shared",
  "version": "0.2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "pnpm -w exec eslint . --ext .ts,.tsx",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit || echo 'no tsconfig'",
    "start": "node dist/main.js || next start -p 3000 || echo \"no start\"",
    "format:check": "prettier -c . || echo \"no prettier\"",
    "clean": "rimraf dist || true",
    "format": "prettier --write .",
    "test:e2e": "echo \"e2e placeholder\"",
    "dev": "nodemon --exec ts-node src/main.ts || echo \"dev script placeholder\"",
    "prepare": "husky install || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "start:prod": "node dist/main.js",
    "coverage": "jest --coverage --passWithNoTests",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --json --output-file sbom.json"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "ts-node": "^10.9.2",
    "@nestjs/cli": "^11.0.0",
    "ts-jest": "^29.1.5",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9 <10"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "@arman/observability-sdk": "workspace:*",
    "@arman/security-middleware": "workspace:*"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
