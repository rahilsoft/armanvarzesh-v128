{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "coach-pwa/*": [
        "app/coach-pwa/*"
      ],
      "@coach-pwa/*": [
        "app/coach-pwa/*"
      ],
      "activity-subgraph/*": [
        "app/activity-subgraph/*"
      ],
      "@activity-subgraph/*": [
        "app/activity-subgraph/*"
      ],
      "user-app/*": [
        "app/user-app/*"
      ],
      "@user-app/*": [
        "app/user-app/*"
      ],
      "coach-app/*": [
        "app/coach-app/*"
      ],
      "@coach-app/*": [
        "app/coach-app/*"
      ],
      "media-worker/*": [
        "app/media-worker/*"
      ],
      "@media-worker/*": [
        "app/media-worker/*"
      ],
      "social-subgraph/*": [
        "app/social-subgraph/*"
      ],
      "@social-subgraph/*": [
        "app/social-subgraph/*"
      ],
      "backend/*": [
        "app/backend/*"
      ],
      "@backend/*": [
        "app/backend/*"
      ],
      "live-subgraph/*": [
        "app/live-subgraph/*"
      ],
      "@live-subgraph/*": [
        "app/live-subgraph/*"
      ],
      "admin/*": [
        "app/admin/*"
      ],
      "@admin/*": [
        "app/admin/*"
      ],
      "site/*": [
        "app/site/*"
      ],
      "@site/*": [
        "app/site/*"
      ],
      "user-pwa/*": [
        "app/user-pwa/*"
      ],
      "@user-pwa/*": [
        "app/user-pwa/*"
      ]
    },
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
