{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":semanticCommits"
  ],
  "timezone": "Europe/Amsterdam",
  "prHourlyLimit": 2,
  "labels": [
    "deps"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm minor/patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm major",
      "matchUpdateTypes": [
        "major"
      ],
      "separateMajorMinor": true
    },
    {
      "matchPackageNames": [
        "next",
        "react",
        "@nestjs/*",
        "prisma"
      ],
      "groupName": "framework core"
    }
  ]
}