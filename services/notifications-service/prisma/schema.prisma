generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql"; url = env("DATABASE_URL") }

model Notification {
  id         String   @id
  userId     String
  templateKey String
  data       Json
  channels   String[] // push,email,sms
  locale     String   @default("fa")
  tz         String   @default("Europe/Amsterdam")
  sendAt     DateTime
  status     String   @default("scheduled") // scheduled|sending|sent|failed|retrying
  attempts   Int      @default(0)
  lastError  String?
  ics        String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Outbox {
  id        String   @id
  notifId   String
  channel   String
  payload   Json
  createdAt DateTime @default(now())
}
