generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {

  id        String   @id @default(uuid())
  name      String
  muscle    String
  level     String   // beginner/intermediate/advanced
  equipment String[] // e.g. ["dumbbell","barbell","bodyweight"]
  createdAt DateTime @default(now())
  items     WorkoutItem[]
}

model Workout {

  id        String   @id @default(uuid())
  userId    String
  title     String
  level     String
  goal      String    // strength/hypertrophy/fatloss
  createdAt DateTime @default(now())
  items     WorkoutItem[]
  @@index([userId], map: "idx_Workout_userId")
}

model WorkoutItem {

  id         String   @id @default(uuid())
  workout    Workout  @relation(fields: [workoutId], references: [id])
  workoutId  String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId String
  sets       Int      @default(3)
  reps       Int      @default(12)
  restSec    Int      @default(60)
  orderIdx   Int
  @@index([workoutId], map: "idx_WorkoutItem_workoutId")
  @@index([exerciseId], map: "idx_WorkoutItem_exerciseId")
}