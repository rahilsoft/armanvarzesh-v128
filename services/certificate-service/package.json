{
  "name": "@arman/certificate-service",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist || rm -rf dist",
    "start:prod": "node dist/main.js",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts || nest start --watch",
    "coverage": "jest --coverage --passWithNoTests",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --json --output-file sbom.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/config": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "@prisma/client": "^6.16.3",
    "qrcode": "^1.5.4",
    "jsonwebtoken": "^9.0.2",
    "express": "^4.19.2",
    "@arman/observability-sdk": "workspace:*",
    "@arman/security-middleware": "workspace:*",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.0.0",
    "prom-client": "^14.2.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9 <10"
  },
  "prisma": {
    "seed": "node ./prisma/seed.ts || node ./seed.ts || true"
  }
}