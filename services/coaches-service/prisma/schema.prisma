generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coach {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String
  password       String?
  speciality     String?
  certifications String?
  bio            String?
  verified       Boolean  @default(false)
  createdAt      DateTime @default(now())
}